{
	"name": "text-utils",
	"displayName": "Text Utils",
	"description": "Usefull utilities while working with text files",
	"version": "1.0.0",
	"publisher": "kv-be",
	"engines": {
		"vscode": "^1.61.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/kv-be/text_utils.git"
	},
	"icon": "textutils.png",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "text-utils.allign_whatever",
				"title": "Allign on whatever pattern (even reg ex)"
			},
			{
				"command": "text-utils.copy_lines_containing",
				"title": "Copies all lines containing a given (reg ex) pattern to the clipboard"
			},
			{
				"command": "text-utils.copy_lines_not_containing",
				"title": "Copies all lines NOT containing a given (reg ex) pattern to the clipboard"
			},
			{
				"command": "text-utils.delete_spaces_right",
				"title": "deletes all spaces right of the cursor till the first non space char"
			}
		],
		"keybindings": [
			{
				"key": "ctrl+alt+d ctrl+alt+a",
				"command":"text-utils.allign_whatever"
			},
			{
				"key": "ctrl+alt+d ctrl+alt+c",
				"command":"text-utils.copy_lines_containing"
			},
			{
				"key": "ctrl+alt+d ctrl+alt+n",
				"command":"text-utils.copy_lines_not_containing"
			},
			{
				"key": "ctrl+alt+d ctrl+alt+space",
				"command":"text-utils.delete_spaces_right"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "text-utils.allign_whatever",
					"group": "text-utils@1"
				},
				{
					"command": "text-utils.delete_spaces_right",
					"group": "text-utils@1"
				}
			]
		}
	},

	"capabilities": {
		"hoverProvider": "true"
	  },	

	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},

	"package-deps": [],
	"providedServices": {},
	"consumedServices": {},

	"devDependencies": {
		"@types/vscode": "^1.61.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"typescript": "^4.4.3",
		"@vscode/test-electron": "^1.6.2"
	}
}
