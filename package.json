{
	"name": "text-utils",
	"displayName": "Text Utils",
	"description": "Usefull utilities while working with text files",
	"version": "1.0.0",
	"publisher": "kv-be",
	"engines": {
		"vscode": "^1.61.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/kv-be/text_utils.git"
	},
	"icon": "textutils.png",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "text-utils.allign_whatever",
				"title": "Allign on pattern..."
			},
			{
				"command": "text-utils.copy_lines_containing",
				"title": "Copy lines with pattern..."
			},
			{
				"command": "text-utils.copy_lines_not_containing",
				"title": "Copy lines without pattern..."
			},
			{
				"command": "text-utils.cut_lines_containing",
				"title": "Cut lines with pattern..."
			},
			{
				"command": "text-utils.cut_lines_not_containing",
				"title": "Cut lines without pattern..."
			},
			{
				"command": "text-utils.delete_spaces_right",
				"title": "Delete spaces to the right"
			}
		],
		"keybindings": [
			{
				"key": "ctrl+alt+u a",
				"command":"text-utils.allign_whatever"
			},
			{
				"key": "ctrl+alt+u c",
				"command":"text-utils.copy_lines_containing"
			},
			{
				"key": "ctrl+alt+u shift C",
				"command":"text-utils.copy_lines_not_containing"
			},
			{
				"key": "ctrl+alt+u x",
				"command":"text-utils.cut_lines_containing"
			},
			{
				"key": "ctrl+alt+u shift c",
				"command":"text-utils.cut_lines_not_containing"
			},
			{
				"key": "ctrl+alt+u space",
				"command":"text-utils.delete_spaces_right"
			}
		],
		"menus": {
			"textutils/main": [
				{
					"command": "text-utils.allign_whatever",
					"group": "text-utils@1"
				},
				{
					"command": "text-utils.copy_lines_containing",
					"group": "text-utils@1"
				},
				{
					"command": "text-utils.copy_lines_not_containing",
					"group": "text-utils@1"
				},
				{
					"command": "text-utils.cut_lines_containing",
					"group": "text-utils@1"
				},
				{
					"command": "text-utils.cut_lines_not_containing",
					"group": "text-utils@1"
				},
				{
					"command": "text-utils.delete_spaces_right",
					"group": "text-utils@1"
				}

			],	
			"editor/context": [
				{
					"submenu": "textutils/main",
					"group": "text-utils@2"
				}

			]
		},
		"submenus": [
			{
				"id": "textutils/main",
				"label": "Textutils"
			}
		]

	},

	"capabilities": {
		"hoverProvider": "true"
	  },	

	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},

	"package-deps": [],
	"providedServices": {},
	"consumedServices": {},

	"devDependencies": {
		"@types/vscode": "^1.61.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"typescript": "^4.4.3",
		"@vscode/test-electron": "^1.6.2"
	}
}
